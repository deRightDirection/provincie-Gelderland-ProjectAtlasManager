<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ribbon="http://schemas.actiprosoftware.com/winfx/xaml/ribbon"
                    xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions">
  <ResourceDictionary.MergedDictionaries>
    <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml"/>
  </ResourceDictionary.MergedDictionaries>
  <DataTemplate x:Key="WebMapsGalleryItemTemplate">
    <Grid Margin="5" MinWidth="50">
      <Grid.RowDefinitions>
          <RowDefinition Height="auto"/>
          <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Stretch="None" Margin="5">
          <Image.Effect>
            <DropShadowEffect Color="{DynamicResource Esri_Color_Gray145}" Opacity="0.4" />
          </Image.Effect>
          <Image.Source>
            <BitmapImage UriCachePolicy="CacheIfAvailable" UriSource="{Binding Path=Thumbnail}"></BitmapImage>
          </Image.Source>
          <Image.ToolTip>
            <ToolTip Content="{Binding Path=Snippet}"></ToolTip>
          </Image.ToolTip>
        </Image>
        <TextBlock Grid.Row="1" Text="{Binding Path=Title}" Style="{DynamicResource Esri_TextBlockRegular}" HorizontalAlignment="Left" FontWeight="Bold" VerticalAlignment="Center" TextWrapping="Wrap"/>
    </Grid>
  </DataTemplate>
</ResourceDictionary>
